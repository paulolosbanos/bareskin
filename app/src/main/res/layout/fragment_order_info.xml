<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    tools:openDrawer="start">

    <ScrollView
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="22dp">

            <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:lineSpacingExtra="4dp"
                android:text="Please check the details of your purchase carefully"
                android:textColor="#6C6C6C"
                android:textSize="18dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f9f9f9"
                    android:paddingBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personal Information"
                            android:textColor="@color/darkBrown"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="2dp"
                            android:background="@null"
                            android:orientation="vertical">

                            <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="Joseph Paulo V. Los Banos"
                                android:textSize="12dp" />

                            <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="Lot 5 Block 6 Road 2 Inday Subdivision Antipolo City"
                                android:textSize="12dp" />

                            <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="0977 831 3782"
                                android:textSize="12dp" />


                        </LinearLayout>

                        <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Payment Date"
                            android:textColor="@color/darkBrown"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="2dp"
                            android:background="@null"
                            android:orientation="vertical">

                            <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="10 July 2017"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Payment Mode"
                            android:textColor="@color/darkBrown"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="2dp"
                            android:background="@null"
                            android:orientation="vertical">

                            <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="Western Union"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Breakdown"
                            android:textColor="@color/darkBrown"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="2dp"
                            android:background="@null"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:text="Luminous Whitening Cream ( Ã— 2 )"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:text="P 240.00"
                                android:textColor="@color/azure"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:text="Luminous Whitening Soap ( Ã— 2 )"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:text="P 240.00"
                                android:textColor="@color/azure"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="Subtotal"
                            android:textColor="@color/darkerBrown"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="P 480.00"
                            android:textColor="@color/azure"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="Shipping Fee"
                            android:textColor="@color/darkerBrown"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="P 50.00"
                            android:textColor="@color/azure"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.mybareskinph.theBareskinApp.widgets.TypeFacedTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="Total"
                            android:textColor="@color/darkerBrown"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="P 530.00"
                            android:textColor="@color/azure"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
